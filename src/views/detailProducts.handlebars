    <div class="product-details">
      <img src={{thumbnails}} alt="" />
      <h2>{{title}} {{description}}</h2>
      <p>Precio: {{price}}</p>
      <p>Categor√≠a: {{category}}</p>
      <p>Disponibilidad: {{stock}}</p>
