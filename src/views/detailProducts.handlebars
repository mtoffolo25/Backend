{{detail}}
  <div class="cardDetail">
    <h1>Detalle del Producto</h1>

    <div class="product-details">
      <img src={{thumbnails}} alt="" />
      <h2>{{title}} {{description}}</h2>
      <h4>Precio:</h4><p>${{price}}</p>
      <h4>Categor√≠a:</h4><p>{{category}}</p>
      <h4>Disponibilidad:</h4><p>{{stock}}</p>
    </div>

    <div class="product-actions">
      <label style="margin-right: 10px;" for="quantity"><h4>Cantidad:</h4></label>
      <input style="margin-right: 10px;" type="number" id="quantity" name="quantity" value="1" min="1" />
      <button class="btn btn-primary">Agregar al Carrito</button>
    </div>
  </div>
